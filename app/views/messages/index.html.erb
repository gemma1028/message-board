<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ入力
  </div>
  <div class="panel-body">
    <%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
      <div class="form-group">
        <label for="message_name" class="col-md-1 control-label">名前</label>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <label for="message_body" class="col-md-1 control-label">内容</label>
        <%= f.text_area :body, cols: 50, rows: 5 %>
      </div>
      <div class="form-group">
        <label class="col-md-1 control-label">送信</label>
        <%= f.submit "メッセージを送信する" %>
      </div>
    <% end %>
  </div>
</div>
  
