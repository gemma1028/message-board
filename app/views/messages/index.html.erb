<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ入力
  </div>
  <div class="panel-body">
    <form class="form-horizontal">
      <div class="form-group">
        <label for="inputName" class="col-md-1 control-label">名前</label>
        <%= form_for(Message.new) do |f| %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <label for="inputContent" class="col-md-1 control-label">内容</label>
        <%= f.text_area :body, cols: 50, rows: 5 %>
      </div>
      <div class="form-group">
        <label for="inputContent" class="col-md-1 control-label">送信</label>
        <%= f.submit class: "btn btn-default" %>
        <% end %>
      </div>
    </form>
  </div>
</div>
  
