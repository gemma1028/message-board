<%= form_for(@message) do |f| %>

<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ入力
  </div>
  <div class="panel-body">
    <%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
      <% if @message.errors.present? %>
        <div class="alert alert-danger">
          <%= alert %>
          <ul>
            <% @message.errors.full_messages.each do |full_message| %>
              <li>
                <%= full_message %>
              </li>
            <% end %> 
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <label for="message_name" class="col-md-1 control-label">名前</label>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <label for="message_body" class="col-md-1 control-label">内容</label>
        <%= f.text_area :body, cols: 50, rows: 1 %>
      </div>
      <div class="form-group">
        <label class="col-md-1 control-label">送信</label>
        <%= f.submit "メッセージを送信する" %>
      </div>
    <% end %>
  </div>
</div>
<% end %>

